{
   "background": {
      "persistent": false,
      "scripts": [ "countdown.js" ]
   },
   "chrome_url_overrides": {
      "newtab": "dashboard.html"
   },
   "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
   "description": "Horizon KPI countdown",
   "icons": {
      "128": "icon-128.png",
      "16": "icon-16.png",
      "48": "icon-48.png"
   },
   "manifest_version": 2,
   "name": "Horizon KPI Clock",
   "offline_enabled": true,
   "version": "1.1"
}
